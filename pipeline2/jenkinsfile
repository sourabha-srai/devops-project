pipeline {
    agent any

    environment {
        GCP_PROJECT = 'YOUR_GCP_PROJECT'
        GCR_REGISTRY = "gcr.io/${GCP_PROJECT}"
        GITHUB_TOKEN = 'YOUR_GITHUB_TOKEN'
        DOCKERFILE_PATH = 'path/to/Dockerfile'  // Path to Dockerfile in GitHub repository
        IMAGE_NAME = 'devpipeline:latest'
		DOCKER_HUB_USER = 'sourabhashettypapt666'
		DOCKER_HUB_PASSWORD = 'shetty@123'
		DOCKER_HUB_REGISTRY = 'devpipeline'
    }

    stages {
        stage('Pull WAR file from GCS') {
            steps {
                script {
                    sh 'rm -rf /var/lib/jenkins/workspace/pipelineno2/Dockerfile'
                    sh 'rm -rf /var/lib/jenkins/workspace/pipelineno2/webapp.war'
                    sh "gsutil cp -r gs://ssdevbucket/*.war /var/lib/jenkins/workspace/pipelineno2/"
                }
            }
        }

        stage('Clone GitHub repository') {
            steps {
                script {
                    git branch: 'main', url: 'https://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@github.com/sourabha-srai/devops-project.git'
                }
            }
        }

        stage('Build Docker image') {
            steps {
                script {
                    // Make sure Docker is installed on the Jenkins agent
                    sh "docker stop \$(docker ps -a -q) && docker container prune -f"
                    sh "docker rmi -f \$(docker images -aq)"
                    sh "docker build -t ${DOCKER_HUB_USER}/${IMAGE_NAME} ."
                }
            }
        }

        stage('Push Docker image to GCR') {
            steps {
                script {
                       sh "docker login -u ${DOCKER_HUB_USER} -p 'shetty@123' docker.io"
                       sh "docker push ${DOCKER_HUB_USER}/${IMAGE_NAME}"
                       sh "docker run -p 8086:8080 -d ${DOCKER_HUB_USER}/${IMAGE_NAME}"
                    }
                }
            }
        }
    }
